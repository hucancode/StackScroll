<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/sample_main_layout">

    <LinearLayout
        android:id="@+id/grpStack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-200dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCard1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:src="@drawable/credit_card_1" />

        <ImageView
            android:id="@+id/imgCard2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:src="@drawable/credit_card_2" />

        <ImageView
            android:id="@+id/imgCard3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:src="@drawable/credit_card_3" />

        <ImageView
            android:id="@+id/imgCard4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:src="@drawable/credit_card_4" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/grpCardDetail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:layout_marginTop="-200dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/txtCardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YUUCHO BANK"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1234 5678 9876 5432"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtCardHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sakutara Kunoichi"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expriration Date: 12/24"
            android:textSize="24sp" />
    </LinearLayout>

    <fragment
        android:id="@+id/log_fragment"
        android:name="com.example.android.common.logger.LogFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
